.page-body
  .work-header
    .work-header__title
      = @work.title
      .work-header__title-item
        = link_to edit_work_path(@work)
          i.fas.fa-cog
    .work-header__deadline
      | 締め切りまであと
      span
        = (@work.deadline - Date.today).numerator
      | 日
  .container
    .stages-table
      .stages-table__head
        | 手順一覧
      - @stages.each do |stage|
        .stages-table__thread
          .stages-table__name
            =  stage.name
          .stages-table__buttons
            = link_to "編集", edit_work_stage_path(@work, stage), class: "stages-table__button is-info"
            = link_to "削除", work_stage_path(@work, stage), method: :delete,  data: { confirm: "#{stage.name}を削除します。よろしいですか？" }, class: "stages-table__button is-danger"

    .stages-tools
      .stages-tool
        = link_to "手順を追加", new_work_stage_path(@work), class: "a-button is-submit"
      .stages-tool
        = link_to "原稿に戻る", work_path(@work), class: "a-button stages-tool__button"
