.page-body
  .container
    .work-deadline
      - day = (@work.deadline - Date.today).numerator
      ul.work-deadline__items
        li.work-deadline__item
          | 締切まであと
        li.work-deadline__item.is-deadline
          = day
        li.work-deadline__item
          | 日
    .work-status
      .card-tabs
        = render "card/card_tabs", work: @work
      .card-list
        = render partial: "progresses/progress", collection: @progresses, as: :progress
      .card-footer
        .card-footer__items
          button.a-button.is-submit
            = form_with url: pages_path, local: true do |f|
              = hidden_field_tag :work_id, @work.id
              i.fas.fa-plus.is-left-icon
              = f.submit "ページを増やす"
